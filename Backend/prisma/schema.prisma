model Cart {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  profile Profile?
}

model Profile {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  cart Cart   @relation(fields: [cartId], references: [id])
  cartId String @unique @db.ObjectId // relation scalar field (used in the `@relation` attribute above)
}